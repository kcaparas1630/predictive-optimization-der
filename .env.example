# Edge Gateway Environment Configuration
# Copy this file to .env and update values for your environment

# InfluxDB Configuration (Local TSDB)
# These values match the docker-compose.yml defaults for development
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=edge-gateway-dev-token
INFLUXDB_ORG=edge-gateway
INFLUXDB_BUCKET=der-data

# Supabase Configuration (Cloud Database)
# Required for cloud sync functionality
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key

# Cloud Sync Configuration
# These settings control the sync process from local InfluxDB to Supabase
SYNC_BATCH_SIZE=100
SYNC_INTERVAL_SECONDS=60
SYNC_STATE_FILE=.sync_state.json
SYNC_SITE_ID=edge-gateway-site
